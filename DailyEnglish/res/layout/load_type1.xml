<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/loading_bg" android:paddingLeft="20dip"
    android:paddingRight="20dip" android:paddingTop="20dip" android:paddingBottom="20dip"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
		<ProgressBar android:id="@+android:id/progress1"
		    style="@style/ProgressBarLoading"
			android:layout_gravity="center_vertical|center_horizontal"
			android:layout_width="40dip" android:layout_height="40dip" />
		<TextView android:layout_height="wrap_content" android:id="@+id/loadtxt1"
			android:textColor="#ffffff" android:text="正在加载..."
			android:textSize="18.0sp"
			android:layout_width="wrap_content"
			android:layout_gravity="center_vertical|center_horizontal"
			android:layout_marginLeft="10dip">></TextView>
</LinearLayout>