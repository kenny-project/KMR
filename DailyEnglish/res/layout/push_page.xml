<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/top_bg">
		    <Button
		        android:id="@+id/pp_back"  
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:background="@drawable/tab_left_bg"
		        android:textColor="@color/layout_bg"/>
		    <TextView
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:textColor="#ffffff"
		        android:gravity="center"
		        android:textSize="22dip"
		        android:layout_centerInParent="true"
		        android:text="string/setting"/>
		</RelativeLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:padding="10dip" >
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="5dip"
		        android:paddingTop="10dip"
		        android:text="string/receive_setting"
		        android:textColor="#949494"
		        android:textSize="16dip" />
		
		    <LinearLayout
		        android:id="@+id/InnerLinearLayout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/setting_frame_bg"
		        android:paddingLeft="1px"
		        android:paddingRight="1px"
		        android:paddingTop="1px"
		        android:paddingBottom="2px"
		        android:orientation="vertical" >
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="string/auto_push"
		                android:textColor="@color/layout_bg"
		                android:textSize="16dip" />
		
		            <RelativeLayout
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:paddingTop="5dip"
		                android:paddingBottom="5dip" >
		
		                <CheckBox
		                    android:id="@+id/pp_auto_push"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_alignParentRight="true"
		                    android:layout_marginLeft="10dip"
		                    android:button="@drawable/v6checkbox_bg"
		                    android:checked="true" >
		                </CheckBox>
		            </RelativeLayout>
		        </LinearLayout>
		
		        <ImageView
		            android:layout_width="fill_parent"
		            android:layout_height="1px"
		            android:background="#b7bcc4" />
		
		         <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/pp_tv_night_receive"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="string/night_receive"
		                android:textColor="@color/layout_bg"
		                android:textSize="16dip" />
		
		            <RelativeLayout
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:paddingTop="5dip"
		                android:paddingBottom="5dip" >
		
		                <CheckBox
		                    android:id="@+id/pp_night_receive"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_alignParentRight="true"
		                    android:layout_marginLeft="10dip"
		                    android:button="@drawable/v6checkbox_bg"
		                    android:checked="true" >
		                </CheckBox>
		            </RelativeLayout>
		        </LinearLayout>
		    </LinearLayout>
		    
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingBottom="5dip"
		        android:paddingTop="10dip"
		        android:text="string/content_setting"
		        android:textColor="#949494"
		        android:textSize="16dip" />
		
		    <LinearLayout
		        android:id="@+id/InnerLinearLayout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/setting_frame_bg"
		        android:paddingLeft="1px"
		        android:paddingRight="1px"
		        android:paddingTop="1px"
		        android:paddingBottom="2px"
		        android:orientation="vertical" >
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/pp_tv_daily_sentence"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="@string/info_home_dailysentence_title"
		                android:textColor="@color/layout_bg"
		                android:textSize="16dip" />
		
		            <RelativeLayout
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:paddingTop="5dip"
		                android:paddingBottom="5dip" >
		
		                <CheckBox
		                    android:id="@+id/pp_daily_sentence"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_alignParentRight="true"
		                    android:layout_marginLeft="10dip"
		                    android:button="@drawable/v6checkbox_bg"
		                    android:checked="true" >
		                </CheckBox>
		            </RelativeLayout>
		        </LinearLayout>
		
		        <ImageView
		            android:layout_width="fill_parent"
		            android:layout_height="1px"
		            android:background="#b7bcc4" />
		
		         <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/pp_tv_bilingual_info"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="@string/info_home_bilingualinfo_title"
		                android:textColor="@color/layout_bg"
		                android:textSize="16dip" />
		
		            <RelativeLayout
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:paddingTop="5dip"
		                android:paddingBottom="5dip" >
		
		                <CheckBox
		                    android:id="@+id/pp_bilingual_info"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_alignParentRight="true"
		                    android:layout_marginLeft="10dip"
		                    android:button="@drawable/v6checkbox_bg"
		                    android:checked="true" >
		                </CheckBox>
		            </RelativeLayout>
		        </LinearLayout>
		        
		         <ImageView
		            android:layout_width="fill_parent"
		            android:layout_height="1px"
		            android:background="#b7bcc4" />
		         
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/pp_tv_system_message"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingLeft="10dip"
		                android:text="string/system_message"
		                android:textColor="@color/layout_bg"
		                android:textSize="16dip" />
		
		            <RelativeLayout
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:paddingTop="5dip"
		                android:paddingBottom="5dip" >
		
		                <CheckBox
		                    android:id="@+id/pp_system_message"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_alignParentRight="true"
		                    android:layout_marginLeft="10dip"
		                    android:button="@drawable/v6checkbox_bg"
		                    android:checked="true" >
		                </CheckBox>
		            </RelativeLayout>
		        </LinearLayout>
		    </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</RelativeLayout>