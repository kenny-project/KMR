<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProgressBarLoading" parent="@android:style/Widget.ProgressBar.Small">
     <item name="android:indeterminateDrawable">@anim/waiting</item>
    </style>
    <style name="KsNormalEditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">17dip</item>
        <item name="android:textColorHighlight">#c6e0ff</item>
        <item name="android:textColorHint">#ffcbd4d9</item>
        <item name="android:background">@drawable/search_noletf</item>
    </style>
    <style name="KsNewwordSearchEditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">15dip</item>
        <item name="android:textColorHighlight">#c6e0ff</item>
        <item name="android:textColorHint">#ffcbd4d9</item>
        <item name="android:background">@drawable/newword_search</item>
    </style>
    
    <style name="ks_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/v6checkbox_bg</item>
		<item name="android:paddingLeft">25dip</item>
	</style>
	
    <style name="scrollstyle" parent="@android:style/Theme">
    	<item name="android:scrollbarThumbVertical">@drawable/scroll_bar</item>
    </style>
    
    <style name="dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@drawable/setting_frame_bg</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:backgroundDimAmount">0.6</item>
	</style>
	  <style name="Theme.PachiraTheme" parent="android:Theme">
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:backgroundDimEnabled">true</item>
	  </style>
    

        
</resources>
