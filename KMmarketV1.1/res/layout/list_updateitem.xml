<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newitem_RelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingBottom="8dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/new_item_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/new_item_image"
                android:layout_alignTop="@+id/new_item_image"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/new_item_layout"
                android:layout_toRightOf="@+id/new_item_image"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/new_item_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="小鸟"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/new_item_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="版本:"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/new_item_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2.50m"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_item_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/new_item_item_images"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/list_down" />

                <TextView
                    android:id="@+id/new_item_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="升级"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/update_explain_bg"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip" >
            <ImageView
                android:id="@+id/listitem_explain_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/update_explain_img_open" />
            <TextView
                android:id="@+id/listitem_explain_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:singleLine="false"
                android:text="小鸟"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>