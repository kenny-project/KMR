<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
       <LinearLayout 
           android:layout_width="fill_parent"
            android:layout_height="fill_parent"        	
        	android:orientation="vertical"  >
           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"               
               android:orientation="horizontal" 
               android:background="@drawable/toptab_bg">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"                   
                   android:layout_marginLeft="30dp"
                   android:gravity="center"
                   android:orientation="vertical" >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"                       
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:text="@string/game_text_top"
                       android:textColor="@color/black"
                       android:textSize="20sp" />
                </LinearLayout>               
            </LinearLayout>     
           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"               
               android:orientation="horizontal" 
               android:background="@drawable/toptab_bg">
               <LinearLayout
                   android:id="@+id/game_tab_1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical" 
                   android:background="@drawable/toptab_line">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"                       
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:text="@string/soft_text_tab1"
                       android:textColor="@color/black"
                       android:textSize="20sp" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/game_tab_2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical" >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"                       
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:text="@string/soft_text_tab2"
                       android:textColor="@color/black"
                       android:textSize="20sp" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/game_tab_3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical" >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"                       
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:text="@string/soft_text_tab3"
                       android:textColor="@color/black"
                       android:textSize="20sp" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/game_tab_4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical" >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginBottom="10dp"                       
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:text="@string/soft_text_tab4"
                       android:textColor="@color/black"
                       android:textSize="20sp" />
               </LinearLayout>               
           </LinearLayout>
           <LinearLayout
               android:id="@+id/game_second_tab"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"               
               android:orientation="horizontal" 
               android:layout_marginLeft="50dp"
               android:layout_marginRight="50dp">
               <LinearLayout
                   android:id="@+id/game_tab_tab_1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/game_text_1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"                       
                       android:gravity="center"
                       android:textColor="@color/black"
                        />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/game_tab_tab_2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical" >
                   <TextView
                       android:id="@+id/game_text_2"         
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"                       
                       android:gravity="center"
                       android:textColor="@color/black"
                       />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/game_tab_tab_3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="vertical" >
                   <TextView
                       android:id="@+id/game_text_3" 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"                       
                       android:gravity="center"
                       android:textColor="@color/black"
                       />
               </LinearLayout>
           </LinearLayout>		       
            <ListView
		    android:id="@+id/game_ls"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />
        
    </LinearLayout>
  </RelativeLayout>