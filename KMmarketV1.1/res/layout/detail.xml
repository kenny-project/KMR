<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/detail_bottom_button" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/detail_icon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/detail_soft_icon_img"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/img" />

                <LinearLayout
                    android:id="@+id/detail_scro_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_soft_icon_img"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/detail_list_log1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/star0" />

                    <ImageView
                        android:id="@+id/detail_list_log2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/star0" />

                    <ImageView
                        android:id="@+id/detail_list_log3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/star0" />

                    <ImageView
                        android:id="@+id/detail_list_log4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/star0" />

                    <ImageView
                        android:id="@+id/detail_list_log5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/star0" />
                </LinearLayout>

                <TextView
                    android:id="@+id/detail_soft_scr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_scro_icon"
                    android:layout_marginLeft="20dip"
                    android:text=""
                    android:textColor="@color/hui"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detail_soft_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_toRightOf="@+id/detail_soft_icon_img"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detail_soft_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_soft_title"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_toRightOf="@+id/detail_soft_icon_img"
                    android:text=""
                    android:textColor="@color/hui"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detail_soft_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_soft_version"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_toRightOf="@+id/detail_soft_icon_img"
                    android:text=""
                    android:textColor="@color/hui"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detail_soft_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_soft_class"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_toRightOf="@+id/detail_soft_icon_img"
                    android:text=""
                    android:textColor="@color/hui"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detail_soft_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_soft_time"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="2dip"
                    android:layout_toRightOf="@+id/detail_soft_icon_img"
                    android:text=""
                    android:textColor="@color/hui"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detail_soft_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/detail_soft_version"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:text=""
                    android:textColor="@color/hui"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detail_soft_down_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/detail_soft_time"
                    android:layout_alignLeft="@+id/detail_soft_size"
                    android:text=""
                    android:textColor="@color/hui"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detail_soft_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/detail_soft_time"
                    android:layout_alignLeft="@+id/detail_soft_size"
                    android:text=""
                    android:textColor="@color/hui"
                    android:textSize="13sp" />
            </RelativeLayout>
           	        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toptab_head_line" />
            <com.work.market.view.CustomGallery
                android:id="@+id/detail_soft_gallery"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/detail_icon"
                android:layout_marginTop="5dip"
                android:background="#ffffffff"
                 />
           	        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toptab_head_line" />
            <TextView
                android:id="@+id/detail_soft_jieshao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/detail_soft_gallery"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:text="介绍说明:"
                android:textColor="@color/green"
                android:textSize="13sp"
                android:textStyle="bold" >
            </TextView>

            <ImageView
                android:id="@+id/detail_soft_fenge1"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/detail_soft_jieshao"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_marginTop="5dip"
                android:background="#00ff00" />

            <TextView
                android:id="@+id/detail_soft_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_soft_fenge1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier="1.5"
                android:text=""
                android:textColor="@color/hui"
                android:textSize="13dip" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/detail_bottom_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/betail_shouchang_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="3dip"
            android:layout_marginTop="3dip"
            android:background="@drawable/detail_unfavorite" />

        <LinearLayout
            android:id="@+id/betail_down_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/bottomtab"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/tab_download_normal" />

            <TextView
                android:id="@+id/detail_down_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="下载"
                android:textColor="@color/whites"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>