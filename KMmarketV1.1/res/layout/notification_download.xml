<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<ImageView android:id="@+id/offline_download_icon_iv" 
	    android:layout_width="33dip"
		android:layout_height="22dip" 
		android:layout_marginLeft="5dip" 
		android:layout_marginTop="7dip" />
	<TextView android:id="@+id/offline_download_title_tv" 
	    android:layout_width="wrap_content"
		android:layout_height="20dip" 
		android:textSize="15sp"
		android:textColor="#000000" 
		android:text=""
		android:layout_toRightOf="@id/offline_download_icon_iv" 
		android:layout_marginLeft="7dip"
		android:layout_marginTop="7dip" 
		android:textStyle="bold" />
	<TextView android:id="@+id/offline_download_percent_tv" 
	    android:layout_width="40dip"
		android:layout_marginTop="5dip" 
		android:layout_height="20dip"
		android:layout_below="@id/offline_download_title_tv" 
		android:text="0%"
		android:layout_marginLeft="5dip" 
		android:textColor="#000000"
		android:textStyle="bold" />
	<ProgressBar android:id="@+id/offline_download_progressbar" 
	    android:layout_width="220dip"
		android:layout_height="20dip" 
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_gravity="center_vertical" 
		android:layout_below="@id/offline_download_title_tv"
		android:layout_marginTop="5dip" 
		android:layout_toRightOf="@id/offline_download_percent_tv"
		android:layout_marginLeft="0dip" />
	<TextView android:id="@+id/offline_download_text" 
	    android:layout_width="220dip"
		android:layout_height="20dip" 
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_gravity="center_vertical" 
		android:layout_below="@id/offline_download_title_tv"
		android:layout_marginTop="5dip" 
		android:layout_toRightOf="@id/offline_download_percent_tv"
		android:layout_marginLeft="0dip" />
</RelativeLayout>