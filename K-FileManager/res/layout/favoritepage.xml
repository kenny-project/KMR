<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/list_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mCurrentPath"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:background="@drawable/title_bar"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20dip"
        android:visibility="gone" >
    </TextView>

    <LinearLayout
        android:id="@+id/lyTools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mCurrentPath" />

    <RelativeLayout
        android:id="@+id/lyTools2"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/lyTools"
        android:background="@drawable/tab2_bg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyTools"
            android:gravity="center" >

            <Button
                android:id="@+id/btAllFile"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:layout_weight="1"
                android:background="@drawable/tab2_left_select"
                android:text="@string/btAllFileTitle"
                android:textColor="#337ddc"
                android:textSize="18dip" />

            <Button
                android:id="@+id/btFolder"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:background="@drawable/tab2_right_unselect"
                android:text="@string/btFolderTitle"
                android:textColor="#337ddc"
                android:textSize="18dip" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyTools21"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/lyTools"
        android:background="@drawable/tab2_bg"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lyTools"
            android:gravity="center" >

            <Button
                android:id="@+id/btListStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/file_manager_browser_listmode" />

            <EditText
                android:id="@+id/mSearchValue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:background="@drawable/search_edit_left"
                android:ellipsize="start"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="@string/msg_please_enter_file"
                android:singleLine="true"
                android:textColor="#737373"
                android:textSize="17dip" />

            <Button
                android:id="@+id/btSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/search_right_bg"
                android:textColor="#337ddc"
                android:textSize="18dip" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lyFavoriteStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toolbar_backgroud"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/lyLocalStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <!--
                     <LinearLayout
                    android:id="@+id/pbLoading"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="2dip"
                    android:background="#00000000"
                    android:orientation="horizontal"
                    android:visibility="gone" >
                    <ProgressBar
                        style="?android:attr/progressBarStyleSmallTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:id="@+id/tvSearchState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="12dip" />
                </LinearLayout>
                -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="2dip"
                    android:background="#00000000"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dip"
                        android:scaleType="center"
                        android:src="@drawable/sd_card_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lable_External"
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="12dip" >
                    </TextView>

                    <TextView
                        android:id="@+id/tvExternalSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="3096M"
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="12dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/lable_Available"
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/tvExternalAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="3096M"
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="12dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:background="#00000000"
                    android:orientation="horizontal" >

                    <ProgressBar
                        android:id="@+id/pbExternalStatus"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="4dip"
                        android:progressDrawable="@drawable/progressbar_style" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:background="#00000000"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="2dip"
                        android:scaleType="center"
                        android:src="@drawable/phone_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/lable_Internal"
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="12dip" >
                    </TextView>

                    <TextView
                        android:id="@+id/tvInternalSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="396.5M"
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="12dip" >
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="@string/lable_Available"
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="12dip" >
                    </TextView>

                    <TextView
                        android:id="@+id/tvInternalAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="3096M"
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="12dip" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dip"
                    android:layout_marginTop="4dip"
                    android:background="#00000000"
                    android:orientation="horizontal" >

                    <ProgressBar
                        android:id="@+id/pbInternalStatus"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="4dip"
                        android:progressDrawable="@drawable/progressbar_style" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btRefresh"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/btn_special_default"
                android:text="@string/btRefresh"
                android:textColor="@color/ContentTitleText"
                android:textSize="20dip"
                android:visibility="gone" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/tlStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:background="#00000000" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/fav_pic_icon" />

                <TextView
                    android:id="@+id/tvPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:text="图片"
                    android:textColor="@color/favorpage_status_textColor" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/fav_music_icon" />

                <TextView
                    android:id="@+id/tvMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:text="音乐"
                    android:textColor="@color/favorpage_status_textColor" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/fav_video_icon" />

                <TextView
                    android:id="@+id/tvVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:text="视频"
                    android:textColor="@color/favorpage_status_textColor" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/fav_document_icon" />

                <TextView
                    android:id="@+id/tvDocument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:text="文档"
                    android:textColor="@color/favorpage_status_textColor"
                    android:textSize="12dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/fav_apk_icon" />

                <TextView
                    android:id="@+id/tvApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:text="安装包"
                    android:textColor="@color/favorpage_status_textColor"
                    android:textSize="12dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/fav_zip_icon" />

                <TextView
                    android:id="@+id/tvZip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:text="压缩包"
                    android:textColor="@color/favorpage_status_textColor"
                    android:textSize="12dip" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:scaleType="center"
                    android:src="@drawable/fav_html_icon" />

                <TextView
                    android:id="@+id/tvWebPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:text="网页"
                    android:textColor="@color/favorpage_status_textColor"
                    android:textSize="12dip" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/lyFavoriteStatus"
        android:layout_below="@id/lyTools2"
        android:layout_weight="1" >

        <com.kenny.file.commui.KListView
            android:id="@+id/lvLocallist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/list_bg"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/list_line"
            android:dividerHeight="2px"
            android:fastScrollEnabled="true" />

        <com.kenny.file.commui.KGridView
            android:id="@+id/gvLocallist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/list_bg"
            android:cacheColorHint="#00000000"
            android:fastScrollEnabled="true"
            android:numColumns="3" >
        </com.kenny.file.commui.KGridView>

        <RelativeLayout
            android:id="@+id/pbLoading"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#f03d3d3d"
            android:padding="20dip"
            android:visibility="gone" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:background="#00000000" >

                <TextView
                    android:id="@+id/tvSDFileStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="16dip" />
                <ProgressBar
                    android:id="@+id/pbSDFileStatus"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="12dip"
                    android:layout_below="@id/tvSDFileStatus"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:progressDrawable="@drawable/progressbar_style"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/lyLoading_msg_pannel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pbSDFileStatus"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:maxLines="5"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/list_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleSmallTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tvSearchState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:maxLines="2"
                        android:minLines="2"
                        android:text=""
                        android:textColor="@color/favorpage_status_textColor"
                        android:textSize="18dip" />
                </LinearLayout>

                <Button
                    android:id="@+id/btLoading_cancel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lyLoading_msg_pannel"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="30dip"
                    android:paddingLeft="45dip"
                    android:paddingRight="45dip"
                    android:text="@string/cancel"
                    android:textColor="@color/favorpage_status_textColor"
                    android:textSize="18dip" >
                </Button>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lyBTools"
        android:layout_width="fill_parent"
        android:layout_height="75dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toolbar_backgroud"
        android:gravity="fill"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btSelectVisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/menu_selall"
            android:text="@string/btSelectVisible"
            android:textColor="@color/ContentTitleText"
            android:textSize="13dip" />

        <Button
            android:id="@+id/btSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/menu_selall"
            android:text="@string/btSelectAll"
            android:textColor="@color/ContentTitleText"
            android:textSize="13dip" />

        <Button
            android:id="@+id/btDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/menu_delete"
            android:text="@string/btDelete"
            android:textColor="@color/ContentTitleText"
            android:textSize="13dip" />

        <Button
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTop="@drawable/menu_back"
            android:text="@string/btBack"
            android:textColor="@color/ContentTitleText"
            android:textSize="13dip" />
    </LinearLayout>

</RelativeLayout>