<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="4dip" >

    <FrameLayout
        android:id="@+id/flItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:maxHeight="64dip"
        android:maxWidth="64dip" >

        <ImageView
            android:id="@+id/image_list_childs"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flItemImage"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:text="TextVifdsafdsafdsafdsaew"
        android:textColor="@color/ContentBack"
        android:textSize="14dip" >
    </TextView>

</RelativeLayout>