<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Setting_BG"
    android:orientation="vertical" >

    <!-- android:background="@drawable/btsetting_selecter" -->

    <RelativeLayout
        android:id="@+id/Head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_top_bg"
        android:orientation="vertical"
        android:paddingBottom="1dip"
        android:visibility="gone" >

        <Button
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/tab_left_bg"
            android:textColor="#ffffff"
            android:textSize="16dip" />

        <TextView
            style="@style/main_tools_tab_style_normal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/setting_Title"
            android:textColor="@color/headTextColor"
            android:textSize="20dip" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f9f9f9" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >
<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dp"
                    android:text="@string/filerelevance_preferences"
                    android:textColor="#b6b6b6"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#d2d2d2" />

                <CheckBox
                    android:id="@+id/btSetDefTxtFileButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:text="@string/setting_txtfile_ico_button"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#d2d2d2" />

                <CheckBox
                    android:id="@+id/btSetDefPicFileButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:text="@string/setting_picfile_ico_button"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#d2d2d2" />

                <CheckBox
                    android:id="@+id/btSetDefAudioFileButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:text="@string/setting_audiofile_ico_button"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#d2d2d2" />

                <CheckBox
                    android:id="@+id/btSetDefZipFileButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:text="@string/setting_zipfile_ico_button"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dp"
                    android:text="@string/filerelevance_preferences"
                    android:textColor="#b6b6b6"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#d2d2d2"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btSetDefFileIcoButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/btsetting_selecter"
                    android:checked="true"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:paddingTop="5dip"
                    android:text="@string/setting_picfile_ico_button"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dp"
                    android:text="@string/display_preferences"
                    android:textColor="#b6b6b6"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#d2d2d2" />

                <CheckBox
                    android:id="@+id/cbSetSensor"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:checked="true"
                    android:text="@string/display_ScreenRotate"
                    android:textColor="@color/Setting_Button_TextColor" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#d2d2d2" />

                <CheckBox
                    android:id="@+id/cbSetTools"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:checked="true"
                    android:text="@string/display_Tools_Title"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:visibility="gone" />


                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#d2d2d2" />

                <CheckBox
                    android:id="@+id/cbSetShowHideFile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:checked="true"
                    android:text="@string/display_ShowHideFile_Title"
                    android:textColor="@color/Setting_Button_TextColor" />
            </LinearLayout>
            <!-- 文件关联图标 -->


            <!-- 主题View -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dp"
                    android:text="@string/setting_theme_textbox"
                    android:textColor="#b6b6b6"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#d2d2d2" />

                <Button
                    android:id="@+id/btSetThemeButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/btsetting_selecter"
                    android:checked="true"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:paddingTop="5dip"
                    android:text="@string/setting_theme_button"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="18dip"
                    android:text="@string/setting_theme_button_desc"
                    android:textColor="@color/Setting_Button_Desc_TextColor"
                    android:textSize="14dip"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dp"
                    android:text="@string/directory_preferences"
                    android:textColor="#b6b6b6"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#ffd2d2d2" />

                <Button
                    android:id="@+id/btSetDefaultPath"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/btsetting_selecter"
                    android:gravity="left"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="@string/directory_DefaultPath"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="16dip"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/btSetCurrentPath"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btsetting_selecter"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="left"
                        android:paddingTop="5dip"
                        android:text="@string/directory_CurrentPath"
                        android:textColor="@color/Setting_Button_TextColor"
                        android:textSize="16dip" />

                    <TextView
                        android:id="@+id/tvSetDefaultPath"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="18dip"
                        android:text="/sdcard/"
                        android:textColor="@color/Setting_Button_TextColor"
                        android:textSize="14dip"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="18dip"
                        android:paddingTop="3dip"
                        android:text="@string/directory_CurrentPath_Desc"
                        android:textColor="@color/Setting_Button_TextColor"
                        android:textSize="14dip" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#d2d2d2" />

                <LinearLayout
                    android:id="@+id/btSetSDPath"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btsetting_selecter"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="left"
                        android:text="@string/directory_SDPath"
                        android:textColor="@color/Setting_Button_TextColor"
                        android:textSize="16dip" />

                    <TextView
                        android:id="@+id/tvSetSDRootPath"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="18dip"
                        android:textColor="@color/Setting_Button_TextColor"
                        android:textSize="14dip"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="18dip"
                        android:paddingTop="3dip"
                        android:text="@string/directory_SDPath_Desc"
                        android:textColor="@color/Setting_Button_TextColor"
                        android:textSize="14dip" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cbLastPath"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:checked="true"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="@string/directory_LastPath"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:visibility="gone" />
            </LinearLayout>

            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dp"
                    android:text="@string/replacement_preferences"
                    android:textColor="#b6b6b6"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="#d2d2d2" />

                <Button
                    android:id="@+id/btSetResumeFavorite"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/btsetting_selecter"
                    android:checked="true"
                    android:gravity="left"
                    android:paddingTop="5dip"
                    android:text="恢复初始化"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />

                <Button
                    android:id="@+id/btSetClearCache"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/btsetting_selecter"
                    android:checked="true"
                    android:gravity="left"
                    android:paddingTop="5dip"
                    android:text="清空 缓存"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvSetToolsStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="18dip"
                    android:text="清空所有缓存,解决软件不能正常使用"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="14dip"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dp"
                    android:text="@string/about_preferences"
                    android:textColor="#b6b6b6"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#d2d2d2" />

                <Button
                    android:id="@+id/btSetFeedback"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/btsetting_selecter"
                    android:checked="true"
                    android:gravity="left"
                    android:padding="5dip"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="@string/setting_Feedback_Button"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#d2d2d2" />

                <Button
                    android:id="@+id/btSetCheckUpdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/btsetting_selecter"
                    android:checked="true"
                    android:gravity="left"
                    android:padding="5dip"
                    android:paddingTop="5dip"
                    android:text="@string/CheckUpdateTitle"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:visibility="gone"
                    android:background="#d2d2d2" />

                <Button
                    android:id="@+id/btSetCommentScore"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/btsetting_selecter"
                    android:checked="true"
                    android:gravity="left"
                    android:padding="5dip"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:visibility="gone"
                    android:text="@string/about_CommentScore"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="#d2d2d2" />

                <Button
                    android:id="@+id/btSetAboutTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/btsetting_selecter"
                    android:checked="true"
                    android:gravity="left"
                    android:padding="5dip"
                    android:paddingTop="5dip"
                    android:text="@string/aboutTitle"
                    android:textColor="@color/Setting_Button_TextColor"
                    android:textSize="18dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>