<resources>

    <style name="Theme.Astro" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:typeface">normal</item>
        <item name="android:actionBarStyle">@style/Widget.Sherlock.ActionBar</item>
        <item name="android:actionBarSize">48.0dip</item>
        <item name="android:dialogTheme">@style/Theme.Sherlock.Dialog</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Sherlock.Light.DarkActionBar</item>
        <item name="actionBarStyle">@style/Widget.Sherlock.ActionBar</item>
        <item name="actionBarWidgetTheme">@style/Theme.Sherlock.Light.DarkActionBar</item>
        <item name="actionBarSize">48.0dip</item>
    </style>

    <style name="Theme.Astro.Navigation" parent="@style/Theme.Astro">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:divider">#ffff0000</item>
       <!--  <item name="headerSeperatorColor">@color/gray1</item> -->
    </style>

    <style name="navPinnedHeaderTextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff969696</item>
    </style>

    <style name="scrollstyle" parent="@android:style/Theme">
        <item name="android:scrollbarThumbVertical">@drawable/scroll_bar</item>
    </style>

    <style name="NobackDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/no_back</item>
    </style>

    <style name="navItemTitleTextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffcccccc</item>
    </style>

    <style name="kmain_tab_item">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">48dip</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.ActionButton</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance"></style>

    <style name="TextAppearance.ActionButton">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="main_tools_tab_style_normal">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/tab_normal</item>
    </style>

    <style name="main_tools_tab_style_selected">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/tab_normal</item>
    </style>

    <style name="KsNormalEditText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">17dip</item>
        <item name="android:textColorHighlight">#c6e0ff</item>
        <item name="android:textColorHint">#ffcbd4d9</item>
        <item name="android:background">@drawable/search_bg</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
    </style>

</resources>